<Window x:Class="JointLessonTerminal.MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JointLessonTerminal.MVVM.View"
        xmlns:viewModel="clr-namespace:JointLessonTerminal.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="Joint lesson" Height="720" Width="1280"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext >
        <viewModel:MainWindowViewModel></viewModel:MainWindowViewModel>
    </Window.DataContext>
    
    <Border Background="#EFEFEF"
            CornerRadius="50">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="100px"/>
                <RowDefinition />
                <RowDefinition Height="50px" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Background="#1A1A1A">
                <RadioButton Content="Панель регистрации"
                             Background="#383838"
                             Height="50px"
                             Width="350px"
                             FontSize="24"
                             IsChecked="True"
                             Command="{Binding AuthOpenCommand}"
                             Style="{StaticResource MenuButtonTheme}">
                </RadioButton>
                <RadioButton Content="Панель курсов"
                             Background="#383838"
                             Height="50px"
                             Width="350px"
                             FontSize="24"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding CourseOpenCommand}">
                </RadioButton>


            </StackPanel>

            <ContentControl Grid.Row="1" 
                            Grid.Column="0"
                            Content="{Binding CurrentView}">

            </ContentControl>

            <StackPanel Grid.Row="2" Grid.Column="0" Background="#1A1A1A">

            </StackPanel>
        </Grid>
    </Border>
</Window>
